# ── Gateway ────────────────────────────────────────────────────────
GATEWAY_PORT=3100
BLOCK_STORE_PATH=./data/blocks
HOST_PUBKEY=  # Ed25519 public key (hex) — generated by scripts/gen-keys.sh

# ── L402 / Lightning (LND REST API) ───────────────────────────────
LND_HOST=lnd:8080
LND_TLS_CERT_PATH=/lnd/tls.cert
# regtest:
LND_MACAROON_PATH=/lnd/data/chain/bitcoin/regtest/admin.macaroon
# signet (production):
# LND_MACAROON_PATH=/lnd/data/chain/bitcoin/signet/admin.macaroon

# ── Mint ──────────────────────────────────────────────────────────
MINT_PORT=3101
MINT1_SK_HEX=  # Ed25519 private key (32 bytes hex) — generated by scripts/gen-keys.sh
MINT2_SK_HEX=  # Spare mint key (separate jurisdiction)
MINT3_SK_HEX=  # Spare mint key (separate jurisdiction)
MINT_URL=http://mint1:3101

# ── Coordinator ───────────────────────────────────────────────────
COORDINATOR_PORT=3102
MINT_PUBKEYS=  # Comma-separated Ed25519 pubkeys — generated by scripts/gen-keys.sh
EPOCH_SCHEDULER_INTERVAL_MS=60000
EPOCH_SCHEDULER_SPOT_CHECKS=true

# ── Database (production: use strong password) ────────────────────
PG_USER=ocdn
PG_PASS=ocdn_prod_2026  # CHANGE THIS — generate a real password
PG_DB=ocdn
DATABASE_URL=postgresql://ocdn:ocdn_prod_2026@postgres:5432/ocdn

# ── Node Agent ────────────────────────────────────────────────────
AGENT_GATEWAY_URL=http://gateway:3100
AGENT_COORDINATOR_URL=http://coordinator:3102
AGENT_HOST_PRIVATE_KEY_HEX=  # Ed25519 private key (hex) — generated by scripts/gen-keys.sh
AGENT_HOST_ENDPOINT=https://ocdn.is
AGENT_POLL_INTERVAL_MS=60000
AGENT_MIN_BOUNTY=100
AGENT_MAX_MIRRORS_PER_CYCLE=5

# ── Pricing defaults ─────────────────────────────────────────────
MIN_REQUEST_SATS=3
SATS_PER_GB=500

# ── Protocol ─────────────────────────────────────────────────────
GENESIS_TIMESTAMP_MS=0  # Protocol genesis (ms). 0 = Unix epoch.
